<h1>Books</h1>

<% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>

  <p>Body</p>
  <span><%= book.body %></span>

  <%= link_to "Show", book_path(book) %>
  <%= link_to "Edit", edit_book_path(book) %>
  <%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "本当に削除しますか？" } %>
<% end %>

<h1>New book</h1>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
